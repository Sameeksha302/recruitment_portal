<h1 class="text-center my-4">Job Listings</h1>

<div class="container">
  <div class="d-flex justify-content-between mb-3">
    <%= link_to 'New Job Post', new_company_job_path(@company), class: "btn btn-primary" %>
  </div>
  
  <table class="table table-striped table-bordered">
    <thead class="thead-light">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Salary</th>
        <th>Location</th>
        <th>Status</th>
        <th colspan="3" class="text-center">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td><%= job.title %></td>
          <td><%= truncate(job.description, length: 50) %></td> <!-- Truncate long descriptions -->
          <td><%= number_to_currency(job.salary) %></td> <!-- Format salary as currency -->
          <td><%= job.location %></td>
          <td><%= job.status.humanize %></td>
          <td class="text-center"><%= link_to 'Show', company_job_path(@company, job), class: "btn btn-info btn-sm" %></td>
          <td class="text-center"><%= link_to 'Edit', edit_company_job_path(@company, job), class: "btn btn-warning btn-sm" %></td>
          <td class="text-center"><%= button_to 'Destroy', company_job_path(@company, job), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
