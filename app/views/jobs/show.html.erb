<div class="container mt-5">
  <!-- Company Information at the Top -->
  <h2 class="text-uppercase text-secondary mb-3">Company: <%= @company.name %></h2>

  <!-- Job Details Card -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h3 class="h5 mb-0">Position: <%= @job.title %></h3>
      <span class="badge <%= @job.status == 'Open' ? 'bg-success' : 'bg-danger' %>">
        <%= @job.status %>
      </span>
    </div>
    <div class="card-body">
      <!-- Job Details -->
      <div class="row">
        <div class="col-md-6">
          <p><strong>Location:</strong> <%= @job.location %></p>
        </div>
        <div class="col-md-6 text-md-end">
          <p><strong>Status:</strong> 
            <span class="badge <%= @job.status == 'Open' ? 'bg-success' : 'bg-danger' %>">
              <%= @job.status %>
            </span>
          </p>
        </div>
      </div>
      <hr>
      
      <h4 class="h6 text-muted">Job Description:</h4>
      <p><%= @job.description %></p>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="d-flex justify-content-between">
    <% if current_user.Candidate? %>
      <div>
        <%= link_to 'Back to Jobs', company_jobs_path(@company), class: 'btn btn-outline-secondary' %>
      </div>
      <%= link_to 'Apply', new_job_job_application_path(@job), class: 'btn btn-success' %>
    <% else %>
      <div>
        <%= link_to 'Edit Job', edit_company_job_path(@company, @job), class: 'btn btn-outline-primary' %>
        <%= link_to 'Back to Jobs', company_jobs_path(@company), class: 'btn btn-outline-secondary' %>
      </div>
    <% end %>
  </div>
</div>
