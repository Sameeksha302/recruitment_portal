<h2 class="text-center">Sign up</h2>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'card p-4 shadow-sm' }) do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Name Field -->
        <div class="mb-3">
          <%= f.label :name, 'Name', class: 'form-label' %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
        </div>

        <!-- Email Field -->
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="mb-3">
          <%= f.label :password_confirmation, class: 'form-label' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <!-- Role Selection Field -->
        <div class="mb-3">
          <%= f.label :role, 'Select Role', class: 'form-label' %>
          <%= f.select :role, options_for_select([['Admin', 'Admin'], ['Recruiter', 'Recruiter'], ['Candidate', 'Candidate']], resource.role), {}, class: 'form-select', id: 'role-select' %>
        </div>

        <!-- Company ID Field for Recruiters (initially hidden) -->
        <div class="mb-3 d-none" id="company-id-field">
          <%= f.label :company_id, 'Company ID', class: 'form-label' %>
          <%= f.text_field :company_id, class: 'form-control' %>
        </div>

        <!-- Company Name Field for Recruiters (initially hidden) -->
        <div class="mb-3 d-none" id="company-name-field">
          <%= f.label :company_name, 'Company Name', class: 'form-label' %>
          <%= f.text_field :company_name, class: 'form-control' %>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener("turbo:load", function() {
    const roleSelect = document.getElementById('role-select');
    const companyNameField = document.getElementById('company-name-field');
    const companyIdField = document.getElementById('company-id-field');

    // Function to toggle visibility based on role selection
    function toggleCompanyFields() {
      const isRecruiter = roleSelect.value === 'Recruiter';
      console.log('Role selected:', roleSelect.value); // Log selected role
      console.log('Is recruiter:', isRecruiter); // Log if recruiter

      // Toggle visibility of the company fields
      companyNameField.classList.toggle('d-none', !isRecruiter);
      companyIdField.classList.toggle('d-none', !isRecruiter);
    }

    // Initial check to set the fields visibility on page load
    toggleCompanyFields();

    // Add event listener for the role selection dropdown
    roleSelect.addEventListener('change', function() {
      console.log('Role changed, updating visibility...'); // Log on role change
      toggleCompanyFields();
    });
  });
</script>

